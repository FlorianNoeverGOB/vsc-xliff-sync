{
  "name": "angular-localization-helper",
  "displayName": "Angular Localization Helper",
  "description":
    "Keeps angular i18n translation files (xliff 1.2, xliff 2 and xmb files) in sync, finds and adds missing translations",
  "version": "0.0.4",
  "publisher": "manux54",
  "repository": {
    "type": "git",
    "url": "https://github.com/manux54/vsc-angular-localization-helper"
  },
  "bugs": {
    "url": "https://github.com/manux54/vsc-angular-localization-helper/issues"
  },
  "homepage": "https://github.com/manux54/vsc-angular-localization-helper/blob/master/README.md",
  "license": "MIT",
  "icon": "assets/ic_translate_3x.png",
  "galleryBanner": {
    "color": "#ccccff",
    "theme": "light"
  },
  "keywords": ["Angular", "i18n", "xliff", "localization"],
  "engines": {
    "vscode": "^1.21.0"
  },
  "categories": ["Other"],
  "main": "./out/extension",
  "activationEvents": [
    "onCommand:extension.synchronizeFiles",
    "workspaceContains:**/*.xlf",
    "onCommand:extension.findNextMissingTarget"
  ],
  "contributes": {
    "configuration": {
      "title": "Angular i18n Synchronization Configuration",
      "properties": {
        "i18nSync.baseFile": {
          "type": "string",
          "default": "messages.xlf",
          "description": "Specifies the file generated by the angular's i18n tool"
        },
        "i18nSync.fileType": {
          "type": "string",
          "default": "xlf",
          "description": "Specifies the i18n file's type (xlf, xlf2 or xmb)"
        },
        "i18nSync.findByMeaningAndDescription": {
          "type": "boolean",
          "default": true,
          "description":
            "Specifies whether or not the extension will try to find translation unit by meaning and description"
        },
        "i18nSync.findByMeaning": {
          "type": "boolean",
          "default": true,
          "description":
            "Specifies whether or not the extension will try to find translation unit by meaning"
        },
        "i18nSync.missingTranslation": {
          "type": "string",
          "default": "!MISSING_TRANSLATION!",
          "description": "Target tag content for missing translation"
        },
        "i18nSync.decoration": {
          "type": "object",
          "default": {
            "color": "#990000",
            "backgroundColor": "#ffff00",
            "overviewRulerColor": "#ffff00",
            "cursor": "pointer",
            "border": "1px solid white",
            "borderRadius": "4px"
          },
          "description": "Missing translation decoration"
        }
      }
    },
    "commands": [
      {
        "command": "extension.synchronizeFiles",
        "title": "Merge",
        "category": "Angular i18n"
      },
      {
        "command": "extension.findNextMissingTarget",
        "title": "Next",
        "category": "Angular i18n"
      }
    ],
    "keybindings": [
      {
        "command": "extension.synchronizeFiles",
        "key": "ctrl+win+s",
        "mac": "ctrl+cmd+s",
        "linux": "ctrl+meta+s"
      },
      {
        "command": "extension.findNextMissingTarget",
        "key": "ctrl+win+n",
        "mac": "ctrl+cmd+n",
        "linux": "ctrl+meta+n",
        "when": "resourceExtname == .xlf"
      }
    ],
    "menus": {
      "touchBar": [
        {
          "command": "extension.synchronizeFiles",
          "group": "editing",
          "when": "resourceExtname == .xlf"
        },
        {
          "command": "extension.findNextMissingTarget",
          "group": "editing",
          "when": "resourceExtname == .xlf"
        }
      ],
      "commandPalette": [
        {
          "command": "extension.findNextMissingTarget",
          "when": "resourceExtname == .xlf"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.42",
    "@types/node": "^7.0.43",
    "@types/sax": "^1.0.0",
    "@types/xml2js": "^0.4.2",
    "@types/xml2json": "^0.10.0",
    "@types/xmlbuilder": "0.0.32",
    "tslint": "^5.8.0",
    "typescript": "^2.6.1",
    "vscode": "^1.1.6"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "always"
  },
  "dependencies": {
    "sax": "^1.2.4",
    "xml2js": "^0.4.19",
    "xmlbuilder": "^9.0.7"
  }
}
