{
  "name": "angular-localization-helper",
  "displayName": "Angular Localization Helper",
  "description":
    "Keeps angular i18n translation files (xliff 1.2, xliff 2 and xmb files) in sync, finds and adds missing translations",
  "version": "0.0.1",
  "publisher": "manux54",
  "repository": {
    "type": "git",
    "url": "https://github.com/manux54/vsc-angular-localization-helper"
  },
  "bugs": {
    "url": "https://github.com/manux54/vsc-angular-localization-helper/issues"
  },
  "homepage": "https://github.com/manux54/vsc-angular-localization-helper/blob/master/README.md",
  "license": "MIT",
  "icon": "assets/ic_translate_3x.png",
  "galleryBanner": {
    "color": "#ccccff",
    "theme": "light"
  },
  "engines": {
    "vscode": "^1.21.0"
  },
  "categories": ["Other"],
  "activationEvents": ["onCommand:extension.synchronizeFiles"],
  "main": "./out/extension",
  "contributes": {
    "configuration": {
      "title": "Angular i18n Synchronization Configuration",
      "properties": {
        "i18nSync.baseFile": {
          "type": "string",
          "default": "messages.xlf",
          "description": "Specifies the file generated by the angular's i18n tool"
        },
        "i18nSync.fileType": {
          "type": "string",
          "default": "xlf",
          "description": "Specifies the i18n file's type (xlf, xlf2 or xmb)"
        }
      }
    },
    "commands": [
      {
        "command": "extension.synchronizeFiles",
        "title": "i18n Sync"
      }
    ],
    "keybindings": [
      {
        "command": "extension.synchronizeFiles",
        "key": "ctrl+alt+S"
      }
    ],
    "menus": {
      "touchBar": [
        {
          "command": "extension.synchronizeFiles",
          "group": "editing",
          "when": "resourceExtname == .xlf"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.42",
    "@types/node": "^7.0.43",
    "@types/sax": "^1.0.0",
    "@types/xml2js": "^0.4.2",
    "@types/xml2json": "^0.10.0",
    "@types/xmlbuilder": "0.0.32",
    "tslint": "^5.8.0",
    "typescript": "^2.6.1",
    "vscode": "^1.1.6"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "always"
  },
  "dependencies": {
    "sax": "^1.2.4",
    "xml2js": "^0.4.19",
    "xmlbuilder": "^9.0.7"
  }
}
